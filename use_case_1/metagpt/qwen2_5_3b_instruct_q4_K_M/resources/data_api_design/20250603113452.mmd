
classDiagram
    class Game {
        -screen: pygame.Surface
        -clock: pygame.time.Clock
        -snake: Snake
        -food: Food
        -score: int
        +__init__(width: int, height: int) None
        +run() None
        +update_score(new_score: int) None
    }
    class Snake {
        -body: List[pygame.math.Vector2]
        -direction: pygame.math.Vector2
        -speed: float
        +__init__(width: int, height: int) None
        +move() None
        +grow(body_part: int) None
        +draw(screen: pygame.Surface) None
    }
    class Food {
        -position: pygame.math.Vector2
        -size: int
        +__init__(width: int, height: int) None
        +spawn(position: Optional[pygame.math.Vector2] = None) None
        +draw(screen: pygame.Surface) None
    }
