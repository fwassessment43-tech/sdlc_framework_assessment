
classDiagram
    class Game {
        -screen: pygame.Surface
        -clock: pygame.time.Clock
        -snake: Snake
        -food: Food
        -score: int
        +__init__(width: int, height: int) None
        +run() None
        +update_score(new_score: int) None
    }
    class Snake {
        -segments: List[Tuple[int, int]]
        -direction: Tuple[int, int]
        +__init__(initial_length: int) None
        +move() None
        +grow(new_segment: Tuple[int, int]) None
        +collide_with_self() bool
    }
    class Food {
        -position: Tuple[int, int]
        +__init__() None
        +generate_new_position() None
        +draw(screen: pygame.Surface) None
    }
