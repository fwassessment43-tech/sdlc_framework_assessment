
sequenceDiagram
    participant U as User
    participant H as HelpDeskStaff
    participant T as Ticket
    participant TM as TicketManager
    U->>T: report_issue(title: str, description: str)
    T->>TM: create_ticket(title: str, description: str)
    TM->>T: assign_status(status: str)
    H->>TM: view_tickets()
    TM->>H: return tickets
    H->>T: exchange_messages(message: str)
    T->>TM: update_status(status: str)
    TM->>U: notify_user(update: str)
